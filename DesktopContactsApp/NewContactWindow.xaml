<Window x:Class="DesktopContactsApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="E-Mail:"/>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="Phone:"/>
            <TextBox x:Name="phoneTextBox" Margin="0,0,0,10"/>
            
            <Button x:Name ="saveButton" Content="Save"/>
        </StackPanel>        
    </Grid>
</Window>
